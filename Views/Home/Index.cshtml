@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/Site.css" rel="stylesheet" />
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <div class="container pad">
            <div class="row">
                <div class="col-lg-4">
                    <a href="@Url.Action("index","units")">
                        <div class="cards">
                            <p class="text-center text-capitalize">View All Units</p>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4">
                    <a href="@Url.Action("create","units")">
                        <div class="cards">
                            <p class="text-center text-capitalize">Add Unit</p>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    }
    else if (User.IsInRole("Manager"))
    {
        <div class="container pad">
            <div class="row">
                <div class="col-lg-4">
                    <a href="@Url.Action("index","results")">
                        <div class="cards">
                            <p class="text-center text-capitalize">View Results</p>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4">
                    <a href="@Url.Action("create","results")">
                        <div class="cards">
                            <p class="text-center text-capitalize">Add Results</p>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    }
}
else
{
    <h1>Hello, Login</h1>
}